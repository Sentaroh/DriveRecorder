<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.videorerder.MainActivity"
    tools:ignore="HardcodedText,DisableBaselineAlignment,NestedWeights,UselessParent" >

    <LinearLayout
        android:id="@+id/main_ui_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ListView
                android:id="@+id/main_day_listview"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp" >

            </ListView>

            <ListView
                android:id="@+id/main_file_listview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" >
            </ListView>
        </LinearLayout>
        
        <include layout="@layout/context_filelist_view"/>
        
    </LinearLayout>
    
</LinearLayout>